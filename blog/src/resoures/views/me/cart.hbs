<div  style="padding-top: 35px;" class="row">
    <div id="" class="col-lg-7">
        <h3>Biểu đồ doanh số theo quý</h3>
        <div>
            <canvas id="myChart"></canvas>
        </div>
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>

<script>
     var cartRows = document.getElementsByClassName('cart-row')
    let total1 = 0; let total2 = 0; let total3 = 0; let total4 = 0; 
    for (var i = 0; i < cartRows.length; i++) {
      var allquy = document.getElementsByClassName("thang")[i];
      var quy = Number(allquy.textContent);
      if(quy === 1 || quy === 2 || quy === 3) {
      var tableHeader = document.getElementsByClassName("tong")[i];
      var headerContent = tableHeader.textContent;
      total1 += Number(headerContent);
      } else if(quy === 4 || quy === 5 || quy === 6) {
        var tableHeader1 = document.getElementsByClassName("tong")[i];
        var headerContent1 = tableHeader1.textContent;
        total2 += Number(headerContent1);
      } else if(quy === 7 || quy === 8 || quy === 9) {
        var tableHeader2 = document.getElementsByClassName("tong")[i];
        var headerContent2 = tableHeader2.textContent;
        total3 += Number(headerContent2);
      } else {
        var tableHeader3 = document.getElementsByClassName("tong")[i];
        var headerContent3 = tableHeader3.textContent;
        total4 += Number(headerContent3);
      }
    }
  (async function() {
    
  const data = [
    { month: 1, count: total1 },
    { month: 2, count: total2  },
    { month: 3, count: total3 },
    { month: 4, count: total4 },
  ];

  new Chart(
    document.getElementById('myChart'),
    {
      type: 'bar',
      data: {
        labels: data.map(row => row.month),
        datasets: [
          {
            label: 'Acquisitions by year',
            data: data.map(row => row.count)
          }
        ]
      }
    }
  );
})();
</script>

<script> 
    var cartRows = document.getElementsByClassName('cart-row')
    let total = 0;
    for (var i = 0; i < cartRows.length; i++) {
      var tableHeader = document.getElementsByClassName("tong")[i];
      var headerContent = tableHeader.textContent;
      total += Number(headerContent);
    }
  document.getElementsByClassName('cart-total-price')[0].innerText = '$' + total
